{% for message in dataProviderEntity.collection %}

    {% if app.user.id == message.authorId %}
        <div class="outgoing_msg">
            <div class="sent_msg">
                <p>{{ message.text }}</p>
                <span class="time_date"> 11:01 AM    |    June 9</span>
            </div>
        </div>
    {% else %}
        <div class="incoming_msg">
            <div class="incoming_msg_img">
                <img src="{{ message.author.logo }}" alt="{{ message.author.username }}" class="img-size-50 img-circle">
            </div>
            <div class="received_msg">
                <div class="received_withd_msg">
                    <p>{{ message.text }}</p>
                    <span class="time_date"> 11:01 AM    |    June 9</span>
                </div>
            </div>
        </div>
    {% endif %}

{% endfor %}
